@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Wetter-Tools</title>
    <link rel="stylesheet" href="/css/site.css" />
    <style>
        body { font-family: system-ui, Segoe UI, Arial, sans-serif; margin: 0; }
        header { background: #0f6cbd; color: white; padding: 12px 16px; }
        .tabs { display: flex; gap: 8px; padding: 8px 16px; background: #f5f5f5; border-bottom: 1px solid #ddd; }
        .tab { padding: 6px 10px; border-radius: 6px; text-decoration: none; color: #0f6cbd; border: 1px solid transparent; }
        .tab:hover { background: #e8f1fb; border-color: #c6dafc; }
        .tab.active { background: #0f6cbd; color: white; }
        .tab.disabled { color: #999; pointer-events: none; }
        main { padding: 16px; }
        .form-row { display: grid; grid-template-columns: 180px 1fr; gap: 8px; align-items: center; margin-bottom: 10px; }
        .result { background: #f5faff; border: 1px solid #c6dafc; padding: 12px; border-radius: 6px; }
    </style>
</head>
<body>
    <header>
        <h2 style="margin:0">Wetter-Tools</h2>
    </header>
    <div class="tabs">
        <a class="tab" asp-controller="Home" asp-action="Index">Start</a>
        <a class="tab" asp-controller="Weather" asp-action="WindChill">WindChill</a>
        <a class="tab disabled" href="#" aria-disabled="true">Heat Index</a>
    </div>
    <main>
        @RenderBody()
    </main>
</body>
</html>
